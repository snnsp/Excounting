<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Group Expense Page</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>

<body>

    <nav>
        <a href="/dashboard/">Dashboard</a> |
        <a href="/GroupExpense/">Group Sharing</a> |
    </nav>

    <main>
        <p>GroupName: <%= group.GroupName%></p>
        <p>GroupLeader: <%= group.GroupLeader.firstname%> <%= group.GroupLeader.lastname%></p>
        <p>AmountToPaid: <%= group.AmountToPaid%> GroupStatus: <%= group.GroupStatus%></p> 
        <p>Group Member</p>
        <table>
            <thead>
                <th>Member</th>
                <th>AmountToPaid</th>
                <th>PaidStatus</th>
                <th>Action</th>
            </thead>
            <% for(var i=0; i < group.GroupMember.length; i++) { %>
                <tr>    
                    <td><%= group.GroupMember[i].Member.firstname %> <%= group.GroupMember[i].Member.lastname %></td>
                    <td><%= group.GroupMember[i].AmountToPaid %></td>
                    <td><%= group.GroupMember[i].PaidStatus %></td>
                    <% if(groupStatus == 'Idle') { %>
                        <td></td>   
                    <% } else if(manageGroupPermission && groupStatus == 'OnGoing' && group.GroupMember[i].PaidStatus == false){ %>  
                        <td><a href="/GroupExpense/Approve/<%= group._id%>/<%= group.GroupMember[i].Member._id%>">Approve</a></td>
                     <% } %>
                </tr>
            <% } %>
        </table>
    </main>

    <% if(manageGroupPermission && groupStatus == 'Idle') { %>
    <div id = manageGroup>
            <button type="button" class="btn btn-success btn-sm" data-toggle="modal" data-target="#AddMember">
                Add new Member
            </button>

            <div class="modal fade" id="AddMember" tabindex="-1" role="dialog" aria-labelledby="AddMemberLabel"
                aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="AddMemberLabel">Add New Member</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <form action="/GroupExpense/addMember/<%= group._id%>" method = "POST">
                            <div class="modal-body">
                                <label>MemberID:</label>
                                <input type="text" name="MemberID">
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                <button type="submit" class="btn btn-success" >AddMember</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            
            <form action="/GroupExpense/ActivateGroup/<%= group._id%>" method = "POST">
                <input type="hidden" value = "EqualShare" name = "type"> 
                <button type="submit" class="btn btn-success" >EqualShare</button>
            </form>

                <button type="button" class="btn btn-success btn-sm" data-toggle="modal" data-target="#ActivateGroup">
                    Manual Share
                </button>
    
                <div class="modal fade" id="ActivateGroup" tabindex="-1" role="dialog" aria-labelledby="ActivateGroupLabel"
                    aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="ActivateGroupLabel">Activate Group</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                                <div class="modal-body">
                                    <form action="/GroupExpense/ActivateGroup/<%= group._id%>" method = "POST">
                                        <input type="hidden" value = "ManualShare" name="type">
                                        <% for(var i=0; i < group.GroupMember.length; i++) { %>
                                            <label>Amout to Paid for <%= group.GroupMember[i].Member.firstname%> <%= group.GroupMember[i].Member.lastname%></label>
                                            <input type="Number" name="AmountToPaid[]" required>
                                        <% } %>
                                        <br>
                                        <button type="submit" class="btn btn-success" >Manual Share</button>
                                    </form>

                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                </div>
                        </div>
                    </div>
                </div>
    </div>
    <% } %>
    


    <form action="/logout" method="get">
        <button name="logout" value="logout">Logout</button>
    </form>
</body>

</html>