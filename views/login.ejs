<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"></script>
    <style>
      .navbar-color {
            background-color: rgb(255, 212, 174);
        }
      .boda {
        background-color: lightgoldenrodyellow;
      }
      .btn-monthly{
        background-color: #b3cf99;
         
      }
      .btn-balance{
        background-color: #c7dbd5;
      }
      .btn-logout{
        background-color: rgb(207, 188, 207);
      }
      .modal-header{
            background-color: black;
        }
      .modal-footer{
            background-color: black;
        }
      
    </style>
    <title>Login Page</title>
  </head>
  <body class="p-3 mb-2 boda text-dark">
    <nav class="navbar navbar-color navbar-expand-lg ">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">Excounting</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/dashboard/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/register/">Register</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/register/">About US</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <div class="w-50 p-3"></div>
    <form action="/login" method="POST">
      <div class="container">
        <!-- Giant Login text -->
        <div class="Login_heading">
          <h1 class="text-3xl font-bold underline">Login</h1>
        </div>

        <hr />

        <%if (error) { %> <%= error %> <br /><br />
        <% } %>

        <!-- Input Email -->
        <!-- <label class="email" for="email"><b>Email</b></label>
            <br> -->
        <input type="username" placeholder="Username" name="username" id="username" required /><br /><br />

        <!-- Input Password -->
        <!-- <label for="psw"><b>Password</b></label>
            <br> -->
        <input type="password" placeholder="Enter Password" name="psw" id="psw" required /><br /><br />

        <!-- Submit Button -->
        <button type="submit" class="btn btn-warning btn-m">Login</button>

        <div class="noAccount">
          <!-- Register page coming soon -->
          <br />
          <a class="text-dark" href="/register">No account? register</a>
        </div>
      </div>
    </form>
  </body>
</html>
